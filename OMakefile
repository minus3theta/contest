.PHONY: all clean cpp rust

CXXFLAGS = -O2 -g -Wall

.SUBDIRS: aoj poj codechef
	include ./BuildInfo
	cxxtargs = $(rootname $(glob i, *.cpp))
	rstargs = $(rootname $(glob i, *.rs))
	targs = $(cxxtargs) $(rstargs)
	$(cxxtargs): %: %.cpp
		$(CXX) $(CXXFLAGS) -o $@ $<

	$(rstargs): %: %.rs
		rustc $<

	all: $(targs)

	clean:
		rm -f $(targs)

	.DEFAULT: all

.SUBDIRS: atcoder

.DEFAULT: all
